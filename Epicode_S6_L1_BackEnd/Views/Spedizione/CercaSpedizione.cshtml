@model Epicode_S6_L1_BackEnd.Models.Spedizione

@{
    ViewBag.Title = "CercaSpedizione";
}

<div class="container body-content">
    <h2 class="text-center">Cerca Spedizione</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row justify-content-center conteiner">
            <div class="d-flex flex-column align-items-center">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group w-25 mt-3 mb-3">
                    <h6>Sei un:</h6>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="aziendaRadio" name="tipoCliente" value="azienda">
                        <label class="form-check-label" for="aziendaRadio">Azienda</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="privatoRadio" name="tipoCliente" value="privato">
                        <label class="form-check-label" for="privatoRadio">Privato</label>
                    </div>
                </div>

                <div class="form-group w-25 mb-3">
                    <h6 id="ivaLabel" style="display: none;">Partita IVA</h6>
                    @Html.EditorFor(model => model.PartitaIVA, new { htmlAttributes = new { @class = "form-control", style = "display: none;", required = "required" } })
                    @Html.ValidationMessageFor(model => model.PartitaIVA, "", new { @class = "text-danger" })

                    <h6 id="cfLabel" style="display: none;">Codice Fiscale</h6>
                    @Html.EditorFor(model => model.CodiceFiscale, new { htmlAttributes = new { @class = "form-control", style = "display: none;", required = "required" } })
                    @Html.ValidationMessageFor(model => model.CodiceFiscale, "", new { @class = "text-danger" })
                </div>

                <div class="text-center mt-3">
                    <input type="submit" value="Cerca" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        $('input[name="tipoCliente"]').on('change', function () {
            if (this.value === "azienda") {
                $('#ivaLabel, #PartitaIVA').show();
                $('#cfLabel, #CodiceFiscale').hide();
            } else if (this.value === "privato") {
                $('#ivaLabel, #PartitaIVA').hide();
                $('#cfLabel, #CodiceFiscale').show();
            }
        });
    });
</script>
