@model Epicode_S6_L1_BackEnd.Models.Spedizione

@{
    ViewBag.Title = "CercaSpedizione";
}

<div class="container body-content">
    <h2 class="text-center">Cerca Spedizione</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row justify-content-center conteiner">
            <div class="d-flex flex-column align-items-center">

                <div class="form-group">
                    <h6 id="ivaLabel">Codice Fiscale o Partita IVA</h6>
                    @Html.EditorFor(model => model.Mittente, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Mittente, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <h6 id="ivaLabel">Codice di Spedizione</h6>
                    @Html.EditorFor(model => model.CodiceSpedizione, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.CodiceSpedizione, "", new { @class = "text-danger" })
                </div>

                <div class="text-center mt-3">
                    <input type="submit" value="Cerca" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>
