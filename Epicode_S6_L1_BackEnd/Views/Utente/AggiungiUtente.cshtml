@model Epicode_S6_L1_BackEnd.Models.Utente

@{
    ViewBag.Title = "AggiungiUtente";
}

<div class="container body-content">
    <h2 class="text-center">Inserisci Utente</h2>

    <div class="text-right mt-3 mb-3">
        <a href="@Url.Action("ListaUtente", "Utente")" class="btn btn-primary">Aggiungi Utente</a>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row justify-content-center conteiner">
            <div class="d-flex flex-column align-items-center">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group w-25">
                    <h6>Nome</h6>
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>

                <div class="form-group w-25">
                    <h6>Cognome</h6>
                    @Html.EditorFor(model => model.Cognome, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Cognome, "", new { @class = "text-danger" })
                </div>

                <div class="form-group w-25">
                    <h6>Codice Fiscale </h6>
                    @Html.EditorFor(model => model.CodiceFiscale, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.CodiceFiscale, "", new { @class = "text-danger" })
                </div>

                <div class="form-group w-25">
                    <h6>Luogo Di Nascita </h6>
                    @Html.EditorFor(model => model.LuogoDiNascita, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.LuogoDiNascita, "", new { @class = "text-danger" })
                </div>

                <div class="form-group w-25">
                    <h6>Residenza </h6>
                    @Html.EditorFor(model => model.Residenza, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Residenza, "", new { @class = "text-danger" })
                </div>

                <div class="form-group w-25">
                    <h6>Data Di Nascita </h6>
                    @Html.EditorFor(model => model.DataDiNascita, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.DataDiNascita, "", new { @class = "text-danger" })
                </div>

                <div class="text-center mt-3">
                    <input type="submit" value="Aggiungi Utente" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>